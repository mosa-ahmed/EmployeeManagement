@model IEnumerable<ApplicationUser>
@{ 
    ViewBag.Title = "All Users";
}
<h1>All Users</h1>
@if (Model.Any())
{
    <a class="btn btn-primary mb-3" asp-action="Register" asp-controller="Account" style="width:auto">Add new user</a>
    foreach(var user in Model)
    {
        <div class="card mb-3">
            <div class="card-header">
                User Id : @user.Id
            </div>
            <div class="card-body">
                <h5 class="card-title">@user.UserName</h5> 
            </div>
            <div class="card-footer">
                <form asp-action="DeleteUser" asp-route-id="@user.Id" method="post">
                    <a asp-action="EditUser" asp-controller="Administration" asp-route-id="@user.Id"
                       class="btn btn-primary">Edit</a>
                    <span id="confirmDeleteSpan_@user.Id" style="display:none">
                        <span>Are you sure you want to delete?</span>
                        <button type="submit" class="btn btn-danger">Yes</button>
                        <a href="#" onclick="confirmDelete('@user.Id' , false)" class="btn btn-primary">No</a>
                    </span>
                    <span id="deleteSpan_@user.Id">
                        <a href="#" onclick="confirmDelete('@user.Id' , true)" class="btn btn-danger">Delete</a>
                    </span>
                </form>
            </div>
        </div>
    }
}
else
{
    <div class="card">
        <div class="card-header">
            No users created yet
        </div>
        <div class="card-body">
            <h5 class="card-title">Use the button bellow to create a user</h5>
            <a asp-action="Register" asp-controller="Account" class="btn btn-primary" style="width:auto">
                Add new user
            </a>
        </div>
    </div>
}
@section Scripts{ 
        <script src="~/js/CustomJavaScript.js" asp-append-version="true"></script>
}
